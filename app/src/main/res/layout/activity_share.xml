<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    tools:context="com.example.priya.socialnetworkingdemo.ui.ShareActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="6"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="2dp"
        android:padding="10dp"
        android:gravity="top"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@android:color/darker_gray"
        android:layout_marginEnd="8dp"
        android:id="@+id/etMessage" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <com.facebook.share.widget.ShareButton
            android:id="@+id/btn_share_fb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="8dp"

            android:background="@color/colorPrimaryDark"
            android:text="share on Facebook"
            android:layout_alignBottom="@+id/btnclick"
            android:textColor="@color/colorWhite" />
        <Button
            android:id="@+id/btnclick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Share On Facebook"
            android:gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorWhite"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@color/colorButtonTwo"/>
    </RelativeLayout>

    <Button
        android:id="@+id/btn_share_gmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Share on Google"
        android:textAlignment="center"
        android:layout_marginLeft="8dp"
        android:background="@color/colorButtonTwo"
        android:textColor="@color/colorWhite"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp" />
    <Button
        android:id="@+id/btn_share_twitter"
        android:layout_width="match_parent"
        android:background="@color/colorButtonTwo"
        android:textColor="@color/colorWhite"
        android:layout_height="wrap_content"
        android:text="Share on Twitter"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />
</LinearLayout>
